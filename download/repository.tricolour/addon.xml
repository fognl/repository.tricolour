<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="repository.tricolour"
  name="Tricolour Kodi Add-ons"
  version="1.0.0"
  provider-name="tricolour">
  <requires>
    <import addon="kodi.addon"
            version="14.0.0"/>
  </requires>
  <extension point="kodi.addon.repository"
             name="Tricolour Kodi Add-on Repository">
    <info compressed="true">http://raw.github.com/fognl/repository.tricolour/addons.xml</info>
    <checksum>http://raw.github.com/fognl/repository.tricolour/addons.xml.md5</checksum>
    <datadir zip="true">http://raw.github.com/queeup/repository.queeup/download</datadir>
    <hashes>false</hashes>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en">Install Add-ons from Tricolour's repository</summary>
    <description lang="en">Download and install add-ons from the Tricolour kodi addon repository.</description>
    <disclaimer lang="en">This is a collection of unofficial Kodi addons for Helix.  None of these addons were 
personally created, but modified for various reasons (fixes, compatibilities, etc).</disclaimer>
    <platform>all</platform>
    <nofanart>true</nofanart>
  </extension>
</addon>
